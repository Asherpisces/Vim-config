{
  "languageserver": {
	"ccls": {
		"command": "ccls",
		"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
		"rootPatterns": [".ccls", "compile_commands.json"],
		"initializationOptions": {
			"cache": {
				"directory": ".ccls-cache",
				"format": "binary"
			},
			"client": {
				"snippetSupport": true
			},
			"index": {
				"onChange": true
			},
			"highlight": {
				"lsRanges": true
			}
		}
	},
	"csharp-ls": {
	  "command": "csharp-ls",
	  "filetypes": ["cs"],
	  "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
	}
  }
}
